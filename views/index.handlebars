<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Eat Da Burger</h1>
    </div>
  </div>
</div>
<div class="container" id="burger">
  <div class="row">
    <div class="col-md-6">
      <form class="create-form">
        <div class="form-group">
          <input type="text" class="form-control" name="burger" id="add-burger" placeholder="Add your burger" data-devoured="false">
        </div>
        <button type="submit" class="btn btn-primary" data-toggle="button" aria-pressed="false">Add it!</button>
      </form>
    </div>
  </div>
</div>
<div class="container">
    <div class="row">
      <div class="col"></div>
        {{#each burger_data}}
        {{#unless this.devoured}}
          <form class="devour">
            <button type="submit" class="btn btn-secondary" data-toggle="button" aria-pressed="false">Devour!</button>
          </form>
        {{/unless}}
        {{/each}}
      </div>
    <div class="col">
      {{#each burger_data}}
        {{#if this.devoured}}
          <input class="form-group" type="text" name="burger" data-devoured="false" placeholder="{{this.id}}. {{this.burger_name}}">
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>